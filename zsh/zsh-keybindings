# Use emacs (default) keybindings
bindkey -e

# FZF find dirs
bindkey -s '^n' '^e^ucd "$(dirname "$(fzf)")"\n'

# tmux-sessionizer
bindkey -s '^f' '^e^u$HOME/.local/hmbin/tmux-sessionizer\n'

# Navigate with lf
# do not bind '^j' as it will overwrite the other keybindings for some reason
bindkey -s '^m' '^e^ulfcd'
