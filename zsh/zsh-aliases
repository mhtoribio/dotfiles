# Confirm before overwriting something
alias cp="cp -i"
alias mv="mv -i"

# ls
alias ls="ls --color=tty"
alias lsa="ls -la"
alias ll="ls -l"

# git shortcuts
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gc='git commit -v'
alias gco='git checkout'
alias gd='git diff'
alias gf='git fetch'
alias gl='git pull'
alias glg='git log --stat'
alias gm='git merge'
alias gp='git push'
alias gr='git remote'
alias grb='git rebase'
alias grs='git restore'
alias gsh='git show'
alias gst='git status'

# use these all the time
alias t="tmux"
alias v="vim"

# xclip
alias cs="xclip -sel clip"

# setxkbmap
alias kmap="setxkbmap"

# python interactive shell
alias py="python"
alias py2="python2"
alias py3="python3"
alias ipy="ipython"
alias ipy2="ipython2"
alias ipy3="ipython3"

# cd aliases
alias cdp="cd $HOME/programming"
alias cdpa="cd $HOME/programming/aau"

# Spawn TMUX session in Org Mode directory
alias org="tmux-sessionizer ~/Dropbox/org"

# SSH-agent
alias ksa="killall ssh-agent && echo 'killall ssh-agent'"
alias gfp="source gsa && git push && ksa"

# CTF specific
alias pwninit="pwninit --template-path ~/.config/pwninit-template.py"

# HDMI display mirroring
alias fix-display="xrandr --output HDMI-1 --auto --same-as eDP-1 --scale-from 2560x1440"
