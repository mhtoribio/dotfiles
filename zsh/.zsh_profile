XDG_PROFILE_HOME=$HOME/.config
XDG_CACHE_HOME=$HOME/.cache
VIM='vim'

export GIT_EDITOR=$VIM

alias cdd="cd $HOME/.dotfiles"
alias cdz="cd $HOME/.dotfiles/zsh"
alias cdv="cd $HOME/.dotfiles/vim"
alias cdt="cd $HOME/.dotfiles/tmux"
alias cdl="cd $HOME/.local"
alias cdlb="cd $HOME/.local/bin"
alias cdp="cd $HOME/programming"
alias cdpa="cd $HOME/programming/aau"
alias cdoa="cd $HOME/OneDriveAAU"
alias cdoe="cd $HOME/OneDriveAAU/ESD1"
alias cdol="cd $HOME/OneDriveAAU/ESD1/local"
alias cdog="cd $HOME/OneDriveAAU/ESD1/Gruppe112"
alias cdop="cd $HOME/OneDriveAAU/ESD1/Gruppe112/project"

# History in cache directory
HISTSIZE=10000000
SAVEHIST=10000000
HISTFILE=$XDG_CACHE_HOME/zsh/history

export PATH=$PATH:$HOME/.local/bin

# FZF find dirs
bindkey -s '^f' 'cd "$(dirname "$(fzf)")"\n'

# Simple calculator
bindkey -s '^x' 'bc -lq\n'
